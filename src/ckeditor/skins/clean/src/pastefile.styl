.cke_pasteimage_placeholder:after,
.cke_pastefile_placeholder:before
  content: attr(data-cke-pastefile-placeholder)
  display: flex
  justify-content: center
  align-items: center
  font: 33px Arial, sans-serif
  color: rgba(#000, 0.4)
  background-color: rgba(#fff, 0.6)
  border: 4px dashed rgba(#000, 0.2)
  pointer-events: none
  z-index: 99

.cke_pasteimage_placeholder:after
  position: absolute
  top: -5px
  right: -5px
  left: -10px
  bottom: -5px

  .cke_maximized &
    left: 0
    right: 0
    display: flex !important

.cke_pastefile_placeholder
  &:before
    position: fixed
    top: 0
    left: 0
    right: 0
    bottom: 0

  &.cke_pasteimage_placeholder:after
    background-color: transparent

  & .cke_pasteimage_placeholder:after
    background-color: transparent
    border-color: rgba(#000, 0.7)
    color: rgba(#000, 1)

.js-pastefile-compose
  &.cke_pastefile_placeholder:before
    margin: -10px 0
    position: absolute

  & .cke_pasteimage_placeholder:after
    display: none

.cke_pastefile_loader
  &:before
    content: ""
    pointer-events: none
    z-index: 99
    position: absolute
    display: block
    top: 0
    right: 0
    left: 0
    bottom: 0
